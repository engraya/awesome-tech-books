<header class="site-header d-flex flex-column justify-content-center align-items-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="mb-0">Edit Book</h2>
            </div>
        </div>
    </div>
</header>
<section class="about-section" id="section_2">
    <div class="container">
        <div class="row">
            <div class="col-md-12 justify-content-center align-items-center d-flex flex-column">
                        <h4 class="col-lg-12 text-center">Edit Book</h4>
                        <div class="subscribe-form-wrap">
                            <form class="custom-form subscribe-form" action="<%= book._id %>" method="POST" enctype="multipart/form-data">
                                <label for="title">Title</label>
                                <input type="text" name="title" class="form-control" value=" <%= book.title %>"><br>
                                <label for="title">Tag</label>
                                <select name="tag">
                                    <% tags.forEach(tag => { %>
                                        <% if (tag.id === book.tag) { %>
                                            <option selected label="<%= tag.name %>" value="<%= tag.id %>"></option>
                                        <% } else { %>
                                            <option label="<%= tag.name %>" value="<%= tag.id %>"></option>
                                            <% } %>
                                    <% }) %>
                                </select>
                                <label for="snippet">Description</label>
                                <input type="text" name="description" class="form-control" value=" <%= book.description %>"><br>
                                <label for="author">Author</label>
                                <input type="text" name="author" class="form-control" value=" <%= book.author %>"><br>
                                <label for="authorProfession">Number of Pages</label>
                                <input type="number" name="numberofpages" class="form-control" value=" <%= book.numberofpages %>"><br>
                                <label for="body">Image</label>
                                <input type="file" name="image" class="form-control"></input>
                                <img src="/ <%= book.image %>" width="100" class="img-thumbnail mt-1">
                                <input type="hidden" name="old_image" value=" <%= book.image %>">
                                <div class="col-lg-12 col-12">
                                    <button type="submit" class="form-control btn btn-success">Update</button>
                                </div>
                            </form>
                        </div>
                </div>
            </div>
        </div>
    </div>
</section>
