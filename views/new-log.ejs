<body>

    <main>


        <%- include('./partials/navbar') %>


        <header class="site-header d-flex flex-column justify-content-center align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <h2 class="mb-0">New Log</h2>
                    </div>
                </div>
            </div>
        </header>
        <section class="about-section" id="section_2">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 justify-content-center align-items-center d-flex flex-column">
                                <h4 class="col-lg-12 text-center">Create Log</h4>
                                <div class="subscribe-form-wrap">
                                    <form class="custom-form subscribe-form" action="/logs" method="POST">
                                        <label for="title">Title</label>
                                        <input type="text" name="title" class="form-control"><br>
                                        <label for="snippet">Snippet</label>
                                        <input type="text" name="snippet" class="form-control"><br>
                                        <label for="author">Author</label>
                                        <input type="text" name="author" class="form-control"><br>
                                        <label for="authorProfession">Author Profession</label>
                                        <input type="text" name="authorProfession" class="form-control"><br>
                                        <label for="body">Body</label>
                                        <textarea type="text" name="body" class="form-control"></textarea>
                                        <div class="col-lg-12 col-12">
                                            <button type="submit" class="form-control btn btn-success">Create Log</button>
                                        </div>
                                    </form>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <%- include('./partials/footer') %>

    <!-- JAVASCRIPT FILES -->
    <script src="js/jquery.min.js"></script>
