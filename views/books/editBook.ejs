<div>
    <label for="name">Title</label>
    <input type="text" name="title" value="<%= book.title %>">
</div>


<div>
<label for="author">Author</label>
<select name="author">
    <% authors.forEach(author => { %>
        <% if (author.id === book.author) { %>
         <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
        <% } else { %>
            <option label="<%= author.name %>" value="<%= author.id %>"></option>
            <% } %>
    <% }) %>
</select>
</div>

<div>
<label for="publishDate">Publish Date</label>
<input type="date" name="publishDate" value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">
</div>

<div>
<label for="pageCount">Page Count</label>
<input type="number" name="pageCount" min="1" value="<%= book.pageCount %>">
</div>

<div class="form-group">
    <label for="formFile" class="form-label mt-1">Cover</label>
    <input class="form-control" type="file" name="image" id="formFile">
    <img src="/ <%= book.image %>" width="100" class="img-thumbnail mt-1">
    <input type="hidden" name="old_image" value=" <%= book.image %>">
  </div>


<div>
<label for="description">Description</label>
<textarea name="desccription"><%= book.description %></textarea>
</div>

